<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeWizard.StatsPage"
             BackgroundColor="#1c1f1c"
             xmlns:model="clr-namespace:TimeWizard">
    <!-- Add a namespace for your models -->

    <VerticalStackLayout>
        <VerticalStackLayout.GestureRecognizers>
            <SwipeGestureRecognizer Direction="Right" Swiped="OnSwipedRight" />
        </VerticalStackLayout.GestureRecognizers>

        <CollectionView x:Name="sessionsList" ItemsSource="{Binding Sessions}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:SessionDisplay">
                    <!-- Specify the type of the data -->
                    <Label Text="{Binding DisplayText}" TextColor="WhiteSmoke"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>